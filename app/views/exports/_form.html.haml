= simple_form_for @export do |f|
  - if export.errors.any?
    #error_explanation
      %h2
        = pluralize(export.errors.count, "error")
        prohibited this export from being saved:
      %ul
        - export.errors.full_messages.each do |message|
          %li= message
  .field
    = f.input :assigned_number
  .field
    = f.input :pedimento_number
  .field
    = f.association :export_type, label_method: :type_code
  .field
    = f.input :total
  .field
    = f.input :iva
  .field
    = f.input :notes
  .field
    = f.input :export_date
  %h3 Parts
  #parts
    = f.simple_fields_for :exports_parts do |part|
      = render 'exports_part_fields', f: part
    .links
      = link_to_add_association 'add part', f, :exports_parts
  .actions
    = f.submit